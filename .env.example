# RedTeamCUA-National 环境变量配置模板
# 复制此文件为 .env 并填入真实的API密钥

# =================================
# 国内大模型API配置
# =================================

# Kimi (月之暗面) API密钥
# 获取地址: https://platform.moonshot.cn/
KIMI_API_KEY=your_kimi_api_key_here

# DeepSeek API密钥  
# 获取地址: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 通义千问 API密钥 (可选)
# 获取地址: https://dashscope.aliyun.com/
QWEN_API_KEY=your_qwen_api_key_here

# =================================
# 国外模型API配置 (用于对比测试)
# =================================

# OpenAI API密钥 (可选)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API密钥 (可选)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =================================
# 网络和代理配置
# =================================

# HTTP代理 (如果需要)
HTTP_PROXY=
HTTPS_PROXY=

# API调用超时设置 (秒)
API_TIMEOUT=60

# 重试次数
MAX_RETRIES=3

# =================================
# 虚拟机配置
# =================================

# VMware虚拟机路径
VM_PATH=./vmware_vm_data/Ubuntu0/Ubuntu0.vmx

# 虚拟机网络配置
VM_HOST_IP=192.168.1.100
VM_USERNAME=user
VM_PASSWORD=password

# =================================
# Docker服务配置  
# =================================

# OwnCloud配置
OWNCLOUD_ADMIN_USERNAME=admin
OWNCLOUD_ADMIN_PASSWORD=admin
OWNCLOUD_TRUSTED_DOMAINS=the-agent-company.com,192.168.1.100,localhost

# RocketChat配置
ROCKETCHAT_ROOT_URL=http://the-agent-company.com:3000
ROCKETCHAT_ADMIN_USERNAME=admin
ROCKETCHAT_ADMIN_PASSWORD=admin

# =================================
# 实验配置
# =================================

# 默认测试域
DEFAULT_DOMAIN=owncloud

# 最大步数
MAX_STEPS=50

# 是否启用无头模式
HEADLESS=true

# 截图保存路径
SCREENSHOT_PATH=./screenshots

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =================================
# 安全配置
# =================================

# 是否启用安全检查
ENABLE_SAFETY_CHECKS=true

# 是否记录敏感操作
LOG_SENSITIVE_OPERATIONS=true

# 实验结果保存路径
RESULTS_PATH=./results

# =================================
# 高级配置
# =================================

# 并发测试数量
CONCURRENT_TESTS=1

# 测试结果缓存
ENABLE_CACHING=true

# 自动清理临时文件
AUTO_CLEANUP=true

# 详细错误报告
VERBOSE_ERRORS=true
